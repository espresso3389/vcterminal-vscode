{
    "name": "vcterminal",
    "displayName": "vcterminal",
    "description": "Open Integrated Terminal with Visual Studio toolchain PATH environment variables.",
    "version": "0.0.1",
    "publisher": "espresso3389",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:terminalVcVers.createBashShell",
        "onCommand:terminalVcVers.createVsCmdPrompt"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "terminalVcVers.createBashShell",
            "title": "Bash on Ubuntu on Windows"
        },
        {
            "command": "terminalVcVers.createVsCmdPrompt",
            "title": "Visual Studio Command Prompt"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}